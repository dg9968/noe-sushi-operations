# Noe Sushi Bar Operations - Environment Configuration
# Note: Vite requires environment variables to be prefixed with VITE_

# Application Mode
# Options: development, production, demo
VITE_MODE=development

# API Configuration (for production backend)
VITE_API_URL=http://localhost:5000/api

# Feature Flags
VITE_ENABLE_ODOO=true
VITE_ENABLE_DEMO=true
VITE_ENABLE_LOGGING=true

# Airtable Configuration (optional)
VITE_AIRTABLE_API_KEY=your_personal_access_token
VITE_AIRTABLE_BASE_ID=your_airtable_base_id
VITE_ENABLE_AIRTABLE=false

# Odoo Configuration (when using direct Odoo connection)
VITE_ODOO_URL=http://localhost:3001